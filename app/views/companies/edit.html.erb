<%= form_for :company, url: company_path(@company), method: :patch do |f| %>
  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao %>
  </div>

  <div class="field">
    <%= f.label :endereco %><br>
    <%= f.text_field :endereco %>
  </div>

  <div class="field">
    <%= f.label :coloque_o_path_do_logo %><br>
    <%= f.text_field :logo %>
  </div>

  <div class="field">
    <%= f.label :telefone_de_contato %><br>
    <%= f.text_field :telefone %>
  </div>
  <%= f.submit value: 'Editar empresa' %>
<% end %>

<%= link_to 'Destroy', company_path(@company),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
