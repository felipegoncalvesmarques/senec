<h1>Edite o palestrante <%= @speaker.nome %></h1>

<%= form_for :speaker, url: company_speaker_path(@company, @speaker), method: :patch do |f| %>
  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome, autofocus: true %>
  </div>
  <div>
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao %>
  </div>
  <div>
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
  </div>
  <%= f.submit value: "Alterar dados"%>

<% end %>

