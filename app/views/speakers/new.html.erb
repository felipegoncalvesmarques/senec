<h1>Crie um novo palestrante para <%= @company.nome %></h1>

<%= form_for([@company, @company.speakers.build]) do |f| %>
  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome, autofocus: true %>
  </div>
  <div>
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao %>
  </div>
  <div>
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
  </div>
  <%= f.submit value: "Criar palestrante"%>

<% end %>
