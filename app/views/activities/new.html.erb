<h1> Crie uma atividade </h1>
<%= form_for :activity, url: activities_path do |f| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@activity.errors.count, "error") %> impedem
        essa atividade de ser criada:
      </h2>
      <ul>
        <% @activity.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao %>
  </div>
  <div class="field">
    <%= f.label :local %><br>
    <%= f.text_field :local %>
  </div>
  <div class="field">
    <%= f.label :data_horario %><br>
    <%= f.datetime_select :data_horario %>
  </div>
  <div class="field">
    <%= f.label :numero_de_vagas %><br>
    <%= f.text_field :numero_de_vagas %>
  </div>
  <div class="field">
    <%= f.label :data_limite_de_inscricao %><br>
    <%= f.datetime_select :data_limite_de_inscricao %>
  </div>
  <%= f.submit %>
<% end %>
