<h1> Edite <%= @activity.titulo %> </h1>
<%= form_for :activity, url: activity_path(@activity), method: :patch do |f| %>
  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao %>
  </div>
  <div class="field">
    <%= f.label :local %><br>
    <%= f.text_field :local %>
  </div>
  <div class="field">
    <%= f.label :data_horario %><br>
    <%= f.datetime_select :data_horario %>
  </div>
  <div class="field">
    <%= f.label :numero_de_vagas %><br>
    <%= f.text_field :numero_de_vagas %>
  </div>
  <div class="field">
    <%= f.label :data_limite_de_inscricao %><br>
    <%= f.datetime_select :data_limite_de_inscricao %>
  </div>
  <%= f.submit value: 'Alterar dados' %>
<% end %>
<%= link_to 'Deletar', activity_path(@activity),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>